  <script>
  (function(){
    var TELEGRAM_URL = "https://t.me/+o4VZafff0vFlZGJh"; // your Telegram channel
    var META_PIXEL_ID = "672982815142267";                // your Meta Ads Pixel ID

    function withQueryParams(baseUrl){
      try { var qs = window.location.search; if(!qs) return baseUrl; return baseUrl + (baseUrl.indexOf('?')>-1 ? '&' : '?') + qs.slice(1); } catch(e){ return baseUrl; }
    }

    function goTelegram(e){
      if(e && e.preventDefault) e.preventDefault();
      var finalUrl = withQueryParams(TELEGRAM_URL);
      try { if(window.fbq){ window.fbq('trackCustom','telegram_entry',{ destination: finalUrl, ts: Date.now() }); } } catch(err){}
      window.open(finalUrl,'_blank','noopener');
    }

    // Init Pixel (safe)
    (function(){
      if(!META_PIXEL_ID) return;
      !(function(f,b,e,v,n,t,s){if(f.fbq)return;n=f.fbq=function(){n.callMethod? n.callMethod.apply(n,arguments):n.queue.push(arguments)};if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';n.queue=[];t=b.createElement(e);t.async=!0;t.src=v;s=b.getElementsByTagName(e)[0];s.parentNode.insertBefore(t,s)})(window,document,'script','https://connect.facebook.net/en_US/fbevents.js');
      try { fbq('init', META_PIXEL_ID); fbq('track','PageView'); fbq('trackCustom','ViewContent_Telegram',{ page: 'github_pages_single_button' }); } catch(err){}
    })();

    document.addEventListener('DOMContentLoaded', function(){
      var btn = document.getElementById('tgButton'); if(btn) btn.addEventListener('click', goTelegram);
      var raw = document.getElementById('rawLink'); if(raw) raw.textContent = withQueryParams(TELEGRAM_URL);
      var y = document.getElementById('year'); if(y) y.textContent = new Date().getFullYear();
    });
  })();
  </script>
  <noscript><img height="1" width="1" style="display:none" alt="" src="https://www.facebook.com/tr?id=672982815142267&ev=PageView&noscript=1"></noscript>
