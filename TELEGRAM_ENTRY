  <script>
    // ====== CONFIG ======
    const TELEGRAM_URL = "https://t.me/+o4VZafff0vFlZGJh"; // seu canal do Telegram
    const META_PIXEL_ID = "672982815142267";               // seu Pixel do Meta Ads

    function withQueryParams(baseUrl) {
      try {
        const qs = window.location.search;
        if (!qs) return baseUrl;
        return baseUrl + (baseUrl.includes("?") ? "&" : "?") + qs.slice(1);
      } catch { return baseUrl; }
    }

    function goTelegram() {
      const finalUrl = withQueryParams(TELEGRAM_URL);
      try { if (window.fbq) { fbq('trackCustom', 'telegram_entry', { destination: finalUrl, ts: Date.now() }); } } catch(e){}
      window.open(finalUrl, '_blank', 'noopener');
    }

    (function initPixel(){
      if (!META_PIXEL_ID) return;
      !(function(f,b,e,v,n,t,s){if(f.fbq)return;n=f.fbq=function(){n.callMethod? n.callMethod.apply(n,arguments):n.queue.push(arguments)};if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';n.queue=[];t=b.createElement(e);t.async=!0;t.src=v;s=b.getElementsByTagName(e)[0];s.parentNode.insertBefore(t,s)})(window,document,'script','https://connect.facebook.net/en_US/fbevents.js');
      fbq('init', META_PIXEL_ID);
      fbq('track', 'PageView');
      try { fbq('trackCustom', 'ViewContent_Telegram', { page: 'github_pages_single_button' }); } catch(e){}
    })();

    document.addEventListener('DOMContentLoaded', () => {
      const raw = document.getElementById('rawLink');
      raw.textContent = withQueryParams(TELEGRAM_URL);
    });
  </script>
  <noscript><img height="1" width="1" style="display:none" alt="" src="https://www.facebook.com/tr?id=672982815142267&ev=PageView&noscript=1"/></noscript>
